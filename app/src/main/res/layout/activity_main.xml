<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
   >

    <Button
        android:id="@+id/left"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="👈"
        android:layout_alignTop="@+id/right"
        android:background="@drawable/huancai" />

    <Button
        android:text="👆"
        android:id="@+id/up"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_above="@+id/left"
        android:layout_toEndOf="@+id/left"
        android:background="@drawable/huancai" />

    <Button
        android:id="@+id/down"
        android:text="👇"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="48dp"
        android:layout_toEndOf="@+id/left"
        android:background="@drawable/huancai" />

    <Button
        android:id="@+id/right"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_above="@+id/down"
        android:text="👉"
        android:layout_toEndOf="@+id/up"
        android:background="@drawable/huancai" />

    <Button
        android:id="@+id/bt"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="124dp"
        android:background="@drawable/huancai"
        android:text="蓝牙" />

    <Spinner
        android:id="@+id/sp1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/bt"
        android:layout_marginStart="-121dp"
        android:layout_toEndOf="@+id/bt"
        android:entries="@array/cars">

    </Spinner>

    <EditText
        android:id="@+id/address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="请输入网址"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/houtai"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="237dp"
      android:background="@drawable/huancai"
        android:text="后台"
        />
    <LinearLayout
        android:id="@+id/l1"
        android:layout_below="@+id/houtai"
        android:layout_alignLeft="@+id/houtai"
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <Button
                android:text="开灯"
                android:id="@+id/OpenLed"
                android:textColor="#00ff00"
                android:background="#fff"
                android:layout_width="100dp"
                android:layout_height="50dp" />
            <Button
                android:text="关灯"
                android:id="@+id/CloseLed"
                android:textColor="#00ff00"
                android:background="#fff"
                android:layout_width="100dp"
                android:layout_height="50dp" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <Button
                android:id="@+id/SaoDi"
                android:background="#fff"
                android:layout_width="100dp"
                android:text="扫地"
                android:textColor="#191970"
                android:layout_height="50dp" />
            <Button
                android:id="@+id/Stop_SaoSi"
                android:text="停止"
                android:textColor="#00008b"
                android:background="#fff"
                android:layout_width="100dp"
                android:layout_height="50dp" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <Button
                android:background="#fff"
                android:text="左移"
                android:id="@+id/ZuoYi"
                android:textColor="#ff00ff"
                android:layout_width="100dp"
                android:layout_height="50dp" />
            <Button
                android:text="右移"
                android:id="@+id/YouYi"
                android:textColor="#ff00ff"
                android:background="#fff"
                android:layout_width="100dp"
                android:layout_height="50dp" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <Button
                android:id="@+id/ZhuaQu"
                android:background="@drawable/yellow"
                android:layout_width="100dp"
                android:text="抓取"
                android:layout_height="50dp" />
            <Button
                android:id="@+id/FuWei"
                android:text="复位"
                android:background="@drawable/yellow"
                android:layout_width="100dp"
                android:layout_height="50dp" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <Button
                android:text="备用1"
                android:background="@drawable/red"
                android:layout_width="100dp"
                android:layout_height="50dp" />
            <Button
                android:text="备用2"
                android:background="@drawable/red"
                android:layout_width="100dp"
                android:layout_height="50dp" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <Button
                android:text="备用3"
                android:background="#fff"
                android:layout_width="100dp"
                android:layout_height="50dp" />
            <Button
                android:text="备用4"
                android:background="#fff"
                android:layout_width="100dp"
                android:layout_height="50dp" />

        </LinearLayout>
    </LinearLayout>


</RelativeLayout>